<?xml version="1.0"?>
<template
    format="5"
    revision="3"
    name="Nicky base adapter creator"
    description="Creates a base adapter and view.">

    <category value="Nicky" />

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />

    <parameter
        id="adapterClass"
        name="Adapter Class"
        type="string"
        constraints="class|unique|nonempty"
        default="MyAdapter" />
        
    <parameter
        id="arrayType"
        name="List item class"
        type="string"
        constraints="class|unique|nonempty"
        default="MyListItem" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
